<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg_login"
tools:context="com.example.htc.androidappmkit.activity.MainActivity">

    <Button
        android:id="@+id/button17"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/val"
        android:layout_marginTop="35dp"
        android:background="@color/btn_login_bg"
        android:text="Web services"
        android:textColor="@color/bg_main"
        android:textSize="18sp"
        android:layout_below="@+id/button16"
        android:layout_alignStart="@+id/button16" />

    <Button
        android:id="@+id/button16"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/valb"
        android:layout_marginTop="31dp"
        android:background="@color/btn_login_bg"
        android:text="RÃ©seau mobile"
        android:textColor="@color/bg_main"
        android:textSize="18sp"
        android:layout_below="@+id/button15"
        android:layout_alignEnd="@+id/button15" />

    <Button
        android:id="@+id/button15"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/val"
        android:layout_marginTop="120dp"
        android:background="@color/btn_login_bg"
        android:text="Android"
        android:textColor="@color/bg_main"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/btn_logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_weight="0.45"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button15"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/lbl_name"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/valb"
        android:background="@color/btn_login_bg"
        android:text="Acces mobile"
        android:textColor="@color/bg_main"
        android:textSize="18sp"
        android:layout_below="@+id/button17"
        android:layout_alignStart="@+id/button17"
        android:layout_marginTop="39dp" />

</RelativeLayout>